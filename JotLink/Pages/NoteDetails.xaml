<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JotLink.Pages.NoteDetails"
             Title="NoteDetails"
             BackgroundColor="{AppThemeBinding Dark=Black, Light=White}"
             
             >

    <VerticalStackLayout 
        x:Name="rootLayout"
                Padding="20" 
                Spacing="20">



        <Border>
            <Editor 
                x:Name="ContentEditor"
                  Text=""
                  BackgroundColor="Transparent"
                  TextColor="White"
                  FontSize="18"
                  Placeholder="Start typing..."
                  PlaceholderColor="Gray"
                  Margin="0"
                  AutoSize="Disabled"
                  HeightRequest="600"/>
        </Border>


        <ActivityIndicator
            x:Name="progressIndicator"
            IsVisible="false"
            IsRunning="True"
            />
        <Border>
            <Editor 
                x:Name="TitleEditor"
                  Text=""
                  TextColor="White"
                  HeightRequest="10"/>
        </Border>
        
        <Button
            x:Name="returnBtn"
              Text="Return to Notes"
              HeightRequest="60"
              WidthRequest="200"
              HorizontalOptions="End"
              Clicked="Return"
              Pressed="returnBtn_Pressed"
              Released="returnBtn_Released"
/>
        
        
        
        <HorizontalStackLayout
            VerticalOptions="Center"
            >

            <Button
                 x:Name="openMenu"
                    Text="|||"
                    HorizontalOptions="Start"
                    Clicked="openMenu_Clicked"  
                    Pressed="openMenu_Pressed"
                    Released="openMenu_Released"
    />
            <Border
            x:Name="optionsFrame"
            StrokeShape="RoundRectangle 15"
            IsVisible="False"
            BackgroundColor="White"
            Padding="18"
            HeightRequest="90"
            WidthRequest="0"

            >
            <StackLayout x:Name="OptionsPanel" 
                                 IsVisible="False" >

                <HorizontalStackLayout 
                               Spacing="10" >

                    <Button 
                           x:Name="downloadBtn"        
                             Text="Download "
                             FontSize="15"
                             HorizontalOptions="Center"
                             Clicked="downloadBtn_Clicked"
                             Released="downloadBtn_Released"
                             Pressed="downloadBtn_Pressed"  />
                    
                    
                    <Button  
                        x:Name="shareNoteBtn"
                           Text="Share Note" 
                           FontSize="15"   
                           HorizontalOptions="Center"
                           Clicked="ShareNote"
                           Pressed="shareNoteBtn_Pressed"
                           Released="shareNoteBtn_Released"/>
                    
                    
                    <Button
                        Text="Bold"
                        FontAttributes="Bold"
                        
                        />
                  <Button
                        Text="Italic"
                        FontAttributes="Italic"/>

                    </HorizontalStackLayout>
            </StackLayout>
            </Border>
        </HorizontalStackLayout>
    </VerticalStackLayout>
    
  
    
</ContentPage>
    
    